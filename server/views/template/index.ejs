<div class="preview-all">
    <div class="container">
        <table class="pv-table table">
            <thead class=" table-dark">
                <tr>
                    <th>SL#</th>
                    <th>ID</th>
                    <th>Template Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% if (docs) { %>
                <tbody>
                    <% docs.forEach(function(template , tIdx){ %>
                        <tr>
                            <td>
                                <%- tIdx+1 %>
                            </td>
                            <td>
                                <%- template.id %>
                            </td>
                            <td>
                                <%- template.title %>
                            </td>
                            <td>
                                <form class="d-inline" method="POST"
                                    action="/template/delete/<%- template.id %>?_method=DELETE">
                                    <button type="submit" class="btn d-inline del-btn btn-danger"
                                        onclick="alert('Do you want to delete this permanently?');">Delete
                                        ID</button>
                                </form>
                                <a href="/template/preview/<%- template.id %>"
                                    class="btn d-inline my-2 pv-btn btn-info">Preview</a>
                                <a href="/template/edit/<%- template.id %>"
                                    class="btn d-inline my-2 edit-btn btn-secondary">Edit</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
                <% } %>

        </table>
    </div>
</div>