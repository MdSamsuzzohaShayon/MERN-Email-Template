<div class="preview-all">
    <div class="container">
        <table class="pv-table table mt-5">
            <thead class=" table-dark">
                <tr>
                    <th>SL#</th>
                    <th>ID</th>
                    <th>Template Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% if (typeof docs!=="undefined" ) { %>
                <tbody>
                    <% docs.forEach(function(template , tIdx){ %>
                        <tr>
                            <td>
                                <%- tIdx+1 %>
                            </td>
                            <td>
                                <%- template.id %>
                            </td>
                            <td>
                                <%- template.title %>
                            </td>
                            <td>
                                <form class="d-inline" method="POST"
                                    action="/template/delete/<%- template.id %>?_method=DELETE">
                                    <button type="submit" class="btn d-inline del-btn btn-danger"
                                        onclick="alert('Do you want to delete this permanently?');">Delete
                                        ID</button>
                                </form>
                                <button class="btn d-inline my-2 pv-btn btn-info"><a
                                        href="/template/preview/<%- template.id %>">Preview</a></button>
                                <button class="btn d-inline my-2 edit-btn btn-secondary"> <a
                                        href="/template/edit/<%- template.id %>">Edit</a></button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
                <% } %>

        </table>
    </div>
</div>